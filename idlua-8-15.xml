    <copy file="${module.idlua.basedir}/lib/kahlua-core.jar" tofile="${tmp.dir.idlua}/lib/kahlua-core.jar"/>
    <zip destfile="${idlua.plugin.path.jar}">
      <fileset dir="${module.idlua.basedir}/../temp"/>
    </zip>
    <delete dir="${tmp.dir.idlua}"/>
