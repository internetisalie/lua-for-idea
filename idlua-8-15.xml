        <attribute name="Manifest-Version" value="1.0"/>
      </manifest>
    </jar>
    <mkdir dir="${tmp.dir.idlua}/help"/>
    <copy file="${module.idlua.basedir}/lib/jsyntaxpane-0.9.5.jar" tofile="${tmp.dir.idlua}/lib/jsyntaxpane-0.9.5.jar"/>
